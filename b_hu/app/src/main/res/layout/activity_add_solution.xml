<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/location1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="100%"/>
    <TextView
        android:id="@+id/add_solution_solution"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:text="回答："
        android:textColor="@color/Blue"
        android:layout_below="@+id/location1"
        android:layout_alignParentLeft="true"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="100%"/>
    <EditText
        android:id="@+id/add_solution_solution_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:layout_below="@+id/add_solution_solution"
        android:layout_alignParentRight="true"
        android:hint="请输入您的答案"
        app:layout_heightPercent="80%"
        app:layout_widthPercent="100%"/>
    <ProgressBar
        android:id="@+id/account_add_solution_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/add_solution_submit"/>
    <Button
        android:id="@+id/add_solution_submit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:text="提交回答"
        android:textSize="50px"
        android:textColor="@color/Purple"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/location2"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="20%"/>
    <TextView
        android:id="@+id/location2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="100%"/>

</androidx.percentlayout.widget.PercentRelativeLayout>