<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/issue_perch"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="100%"/>
    <TextView
        android:id="@+id/issue_quiz"
        android:layout_below="@+id/issue_perch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/issue_quiz_describe"
        android:layout_below="@+id/issue_quiz"
        android:maxLines="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/issue_perch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="回答列表："
        android:textColor="@color/Purple"
        android:layout_below="@+id/issue_quiz_describe"/>
    <ListView
        android:id="@+id/issue_listview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/issue_perch2"
        android:layout_alignParentBottom="true"
        app:layout_widthPercent="100%"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/issue_add_solution"
        android:src="@drawable/add"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/occypy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/occypy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="100%" />
</androidx.percentlayout.widget.PercentRelativeLayout>