<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/location1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_heightPercent="20%"
        app:layout_widthPercent="100%"/>
    <ImageView
        android:id="@+id/account_login_account_icon"
        android:src="@drawable/account_account_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/location1"
        android:layout_alignParentLeft="true"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="10%"/>
    <EditText
        android:id="@+id/account_login_account"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:layout_below="@+id/location1"
        android:layout_toRightOf="@id/account_login_account_icon"
        android:hint="请输入账号"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="90%"/>
    <ImageView
        android:id="@+id/account_login_password_icon"
        android:src="@drawable/account_password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:layout_below="@+id/account_login_account_icon"
        android:layout_alignParentLeft="true"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="10%"/>
    <EditText
        android:id="@+id/account_login_password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:layout_below="@+id/account_login_account"
        android:layout_toRightOf="@id/account_login_password_icon"
        android:hint="请输入密码"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="90%"/>
    <ImageView
        android:id="@+id/account_second_login_password_icon"
        android:src="@drawable/account_second_password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:layout_below="@+id/account_login_password_icon"
        android:layout_alignParentLeft="true"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="10%"/>
    <EditText
        android:id="@+id/account_login_second_password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:layout_below="@+id/account_login_password"
        android:layout_toRightOf="@id/account_second_login_password_icon"
        android:hint="请再次输入密码"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="90%"/>
    <ProgressBar
        android:id="@+id/account_login_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/account_login"/>
    <Button
        android:id="@+id/account_login"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:text="注册"
        android:textSize="100px"
        android:textColor="@color/Purple"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/location2"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="20%"/>
    <TextView
        android:id="@+id/location2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        app:layout_heightPercent="20%"
        app:layout_widthPercent="100%"/>
</androidx.percentlayout.widget.PercentRelativeLayout>