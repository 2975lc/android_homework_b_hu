<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/title_more"
        android:background="@android:color/transparent"
        android:src="@drawable/title_more"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="20%" />
    <Button
        android:id="@+id/title_homepage"
        android:background="@android:color/transparent"
        android:text="首页"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="20%" />
    <Button
        android:id="@+id/title_member"
        android:background="@android:color/transparent"
        android:text="会员"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/title_homepage"
        android:gravity="center"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="20%" />
    <Button
        android:id="@+id/title_mine"
        android:background="@android:color/transparent"
        android:text="我的"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="20%" />
    <Button
        android:id="@+id/title_imformation"
        android:background="@android:color/transparent"
        android:text="消息"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/title_mine"
        android:gravity="center"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="20%" />
</androidx.percentlayout.widget.PercentRelativeLayout>